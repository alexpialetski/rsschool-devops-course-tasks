{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "terraform-files": ["{projectRoot}/**/*.tf"],
    "terraform-env": [
      {
        "env": "TF_VAR_region"
      },
      {
        "env": "TF_VAR_account_id"
      },
      {
        "env": "TF_WORKSPACE"
      }
    ],
    "terraform-all": ["terraform-files", "terraform-env"]
  },
  "targetDefaults": {
    "terraform-init": {
      "executor": "nx:run-commands",
      "cache": true,
      "inputs": [
        "{projectRoot}/provider.tf",
        "{projectRoot}/backend.tf",
        "terraform-env"
      ],
      "outputs": [
        "{projectRoot}/.terraform",
        "{projectRoot}/.terraform.lock.hcl"
      ],
      "options": {
        "cwd": "{projectRoot}",
        "command": "terraform init -reconfigure"
      }
    },
    "terraform-plan": {
      "executor": "nx:run-commands",
      "dependsOn": ["terraform-init"],
      "inputs": ["terraform-all"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "terraform plan -out=tfplan"
      }
    },
    "terraform-apply": {
      "executor": "nx:run-commands",
      "dependsOn": ["terraform-plan"],
      "inputs": ["terraform-all"],
      "options": {
        "cwd": "{projectRoot}",
        "command": "terraform apply -auto-approve tfplan"
      }
    },
    "terraform-fmt": {
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "terraform fmt -write=true"
      }
    }
  },
  "nxCloudId": "686e975426cf276f670bc399"
}
